<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Top section with logo and stars -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:background="@color/red"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logoImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/levelStar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/levelStar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            app:srcCompat="@drawable/star" />

        <ImageView
            android:id="@+id/levelStar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            app:srcCompat="@drawable/star" />
    </LinearLayout>

    <!-- Empty boxes section -->
    <LinearLayout
        android:id="@+id/ll_empty_boxes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="0.05"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/box1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_border"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/box2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_border"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/box3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_border"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/box4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_border"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/box5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_border"
            android:gravity="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/box6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_border"
            android:gravity="center"
            android:textSize="30sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_gravity="center"
        android:layout_weight="0.01"
        android:background="@drawable/hexagongiant">

        <!-- LinearLayout for the puzzle buttons -->

        <!-- Result indicator -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_letter_top1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-10dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/transparent_button"
                    android:text="P"
                    android:textColor="@android:color/black"
                    android:textSize="60sp"
                    android:shadowColor="#E68900"
                    android:shadowDx="8"
                    android:shadowDy="20"
                    android:shadowRadius="3" />


                <Button
                    android:id="@+id/btn_letter_top2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="-10dp"
                    android:background="@drawable/transparent_button"
                    android:text="U"
                    android:textColor="@android:color/black"
                    android:textSize="60sp"
                    android:shadowColor="#E68900"
                    android:shadowDx="8"
                    android:shadowDy="20"
                    android:shadowRadius="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_letter_left1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="90dp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/transparent_button"
                    android:text="S"
                    android:textColor="@android:color/black"
                    android:textSize="60sp"
                    android:shadowColor="#E68900"
                    android:shadowDx="8"
                    android:shadowDy="20"
                    android:shadowRadius="3" />


                <Button
                    android:id="@+id/btn_letter_right1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/transparent_button"
                    android:layout_gravity="center_horizontal"
                    android:text="A"
                    android:textColor="@android:color/black"
                    android:textSize="60sp"
                    android:shadowColor="#E68900"
                    android:shadowDx="8"
                    android:shadowDy="20"
                    android:shadowRadius="3" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_letter_left2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="-0dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/transparent_button"
                    android:text="L"
                    android:textColor="@android:color/black"
                    android:textSize="60sp"
                    android:shadowColor="#E68900"
                    android:shadowDx="8"
                    android:shadowDy="20"
                    android:shadowRadius="3" />


                <Button
                    android:id="@+id/btn_letter_right2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/transparent_button"
                    android:text="M"
                    android:textColor="@android:color/black"
                    android:textSize="60sp"
                    android:shadowColor="#E68900"
                    android:shadowDx="8"
                    android:shadowDy="20"
                    android:shadowRadius="3" />

            </LinearLayout>
        </LinearLayout>

        <!-- Result indicator -->
        <ImageView
            android:id="@+id/result_indicator"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:scaleType="centerInside" />

        <!-- Try again button -->
        <Button
            android:id="@+id/btn_try_again"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/tryagain"
            android:visibility="gone"
            />

        <!-- Undo button -->
        <Button
            android:id="@+id/btn_undo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/undo"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/btn_Next"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/arrow"
            android:visibility="gone"
            />
    </FrameLayout>

    <!-- Bottom buttons -->

    <Button
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Back"
        android:backgroundTint="#FFC000"
        android:textColor="@android:color/black"
        android:textSize="40sp"/>

</LinearLayout>
