<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Top section with logo and star -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@color/red"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logoImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/levelStar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            app:srcCompat="@drawable/star"/>
    </LinearLayout>

    <!-- Empty boxes section -->
    <LinearLayout
        android:id="@+id/ll_empty_boxes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="0.05">

        <TextView
            android:id="@+id/box1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_border"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/box2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_border"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/box3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_border"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/box4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_border"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/box5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_border"
            android:gravity="center"
            android:textSize="30sp"/>
    </LinearLayout>

    <!-- Star shape with buttons -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="423dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/starGiant">

        <!-- RelativeLayout for the puzzle buttons -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <!-- Button at the top -->
            <Button
                android:id="@+id/btn_letter_top"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/transparent_button"
                android:text="A"
                android:textColor="@android:color/black"
                android:textSize="50sp" />
            <!-- Button at the top-right -->

            <Button
                android:id="@+id/btn_letter_top_right"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="135dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/transparent_button"
                android:text="P"
                android:textColor="@android:color/black"
                android:textSize="50sp" />

            <!-- Button at the bottom-right -->
            <Button
                android:id="@+id/btn_letter_bottom_right"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/transparent_button"
                android:text="P"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <!-- Button at the bottom-left -->
            <Button
                android:id="@+id/btn_letter_bottom_left"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="55dp"
                android:layout_marginBottom="80dp"
                android:background="@drawable/transparent_button"
                android:text="L"
                android:textColor="@android:color/black"
                android:textSize="50sp" />

            <!-- Button at the top-left -->
            <Button
                android:id="@+id/btn_letter_top_left"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="135dp"
                android:background="@drawable/transparent_button"
                android:text="E"
                android:textColor="@android:color/black"
                android:textSize="50sp" />
        </RelativeLayout>


        <!-- Result indicator -->
        <ImageView
            android:id="@+id/result_indicator"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <!-- Try again button -->
        <Button
            android:id="@+id/btn_try_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:backgroundTint="@color/red"
            android:text="Try Again"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Bottom buttons -->
    <Button
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Home page"
        android:backgroundTint="#FFC000"
        android:textColor="@android:color/white"
        android:textSize="40sp"/>
</LinearLayout>
