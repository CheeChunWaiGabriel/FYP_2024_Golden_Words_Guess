<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Top section with logo and star -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:background="@color/red"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logoImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/levelStar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            app:srcCompat="@drawable/star"/>
    </LinearLayout>

    <!-- Empty boxes section -->
    <LinearLayout
        android:id="@+id/ll_empty_boxes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="0.05">

        <TextView
            android:id="@+id/box1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_border"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/box2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_border"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/box3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_border"
            android:gravity="center"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/box4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/box_border"
            android:gravity="center"
            android:textSize="30sp"/>
    </LinearLayout>

    <!-- Diamond shape with buttons -->
    <FrameLayout
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/diamond__1_star__puzzle_background">

        <!-- LinearLayout for the puzzle buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Button at the top -->
            <Button
                android:id="@+id/btn_letter_top"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/transparent_button"
                android:text="W"
                android:textColor="@android:color/black"
                android:textSize="60sp"/>

            <!-- Horizontal layout for the middle buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Button on the left -->
                <Button
                    android:id="@+id/btn_letter_left"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/transparent_button"
                    android:text="O"
                    android:textColor="@android:color/black"
                    android:textSize="60sp"/>

                <!-- Button on the right -->
                <Button
                    android:id="@+id/btn_letter_right"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="70dp"
                    android:background="@drawable/transparent_button"
                    android:text="L"
                    android:textColor="@android:color/black"
                    android:textSize="60sp"/>
            </LinearLayout>

            <!-- Button at the bottom -->
            <Button
                android:id="@+id/btn_letter_bottom"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/transparent_button"
                android:text="F"
                android:textColor="@android:color/black"
                android:textSize="60sp"/>
        </LinearLayout>

        <!-- Result indicator -->
        <ImageView
            android:id="@+id/result_indicator"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:scaleType="centerInside" />

        <!-- Try again button -->
        <Button
            android:id="@+id/btn_try_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:visibility="gone"
            android:text="Try Again"
            android:layout_marginRight="70dp"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:textSize="40sp"/>

        <!-- Undo button -->
        <Button
            android:id="@+id/btn_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginLeft="110dp"
            android:visibility="gone"
            android:text="Undo"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:textSize="40sp"/>
    </FrameLayout>


    <!-- Bottom buttons -->
    <Button
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Home page"
        android:backgroundTint="#FFC000"
        android:textColor="@android:color/white"
        android:textSize="40sp"/>
</LinearLayout>
